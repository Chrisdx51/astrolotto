# ðŸš€ Astro Lotto Luck â€” Clean + Safe iOS Podfile (for Codemagic)
platform :ios, '13.0'

use_frameworks! :linkage => :static
use_modular_headers!

ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

# ðŸ” Locate Flutter root
def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure 'flutter pub get' is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}"
end

# ðŸª„ Load Flutterâ€™s helper
require File.expand_path(File.join(flutter_root, 'packages', 'flutter_tools', 'bin', 'podhelper.rb'))

flutter_ios_podfile_setup

target 'Runner' do
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))

  # âœ… Only include SDKs not auto-handled by Flutter plugins
  pod 'Google-Mobile-Ads-SDK'

  # âœ… Optional: always use the latest nanopb compatible with Firebase
  pod 'nanopb', '~> 2.30908.0'
end

post_install do |installer|
  # ðŸ§¹ Fix build warnings & architecture issues
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)

    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
      # Avoid arm64 simulator issue on Codemagic M1/M2
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
    end
  end

  # âœ… Force CocoaPods to refresh specs each build (fixes cache issues)
  system('pod repo update')
end
